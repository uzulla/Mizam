<!doctype html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>サンプルアプリケーション</title>

    <link rel="stylesheet" href="/assets/materialize/css/materialize.min.css">
    <script src="/assets/materialize/js/materialize.min.js"></script>

    <link rel="stylesheet" href="/assets/main.css">
    <script src="/assets/main.js"></script>

</head>
<body>
<nav>
    <div class="container">
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">画像アップローダー</a>

            <ul id="nav-mobile" class="right hide-on-med-and-down">
                {% if user_session %}
                    <li>
                        <a href="#">hello {{ user_session.nick }} !</a>
                    </li>
                    <li>
                        <form action="/sign/out" method="post">
                            <input type="hidden" name="csrf_token" value="{{ user_session.csrf_token }}">
                            <button class="btn-small waves-effect waves-light" type="submit" name="action">sign out</button>
                        </form>
                    </li>
                    <li>
                        <a href="https://github.com/uzulla/Mizam">Github</a>
                    </li>
                {% else %}
                    <li>
                        <a href="/sign/in">sign in</a>
                    </li>
                    <li>
                        <a href="/sign/up">sign up</a>
                    </li>
                    <li>
                        <a href="https://github.com/uzulla/Mizam">Github</a>
                    </li>
                {% endif %}
            </ul>

            <a href="#" data-target="slide-out" class="sidenav-trigger">➡️</a>
            <ul id="slide-out" class="sidenav">
                {% if user_session %}
                    <li>
                        <a href="#">hello {{ user_session.nick }} !</a>
                    </li>
                    <li>
                        <form action="/sign/out" method="post">
                            <input type="hidden" name="csrf_token" value="{{ user_session.csrf_token }}">
                            <button class="btn-small waves-effect waves-light" type="submit" name="action">sign out</button>
                        </form>
                    </li>
                    <li>
                        <a href="https://github.com/uzulla/Mizam">Github</a>
                    </li>
                {% else %}
                    <li>
                        <a href="/sign/in">sign in</a>
                    </li>
                    <li>
                        <a href="/sign/up">sign up</a>
                    </li>
                    <li>
                        <a href="https://github.com/uzulla/Mizam">Github</a>
                    </li>
                {% endif %}
            </ul>

        </div>
    </div>
</nav>

<div class="container">
    {% block content %}{% endblock %}
</div>
</body>
</html>